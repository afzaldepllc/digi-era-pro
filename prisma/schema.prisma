generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model attachments {
  id                String   @id @default(uuid()) @db.Uuid
  message_id        String   @db.Uuid
  channel_id        String   @db.Uuid
  mongo_uploader_id String
  file_name         String
  file_url          String?
  s3_key            String?
  s3_bucket         String?
  file_size         Int?
  file_type         String?
  created_at        DateTime @default(now()) @db.Timestamptz(6)
  channels          channels @relation(fields: [channel_id], references: [id], onDelete: Cascade)
  messages          messages @relation(fields: [message_id], references: [id], onDelete: Cascade)
}

model channel_members {
  id                    String    @id @default(uuid()) @db.Uuid
  channel_id            String    @db.Uuid
  mongo_member_id       String
  role                  String    @default("member")  // 'owner' | 'admin' | 'member'
  joined_at             DateTime  @default(now()) @db.Timestamptz(6)
  last_seen_at          DateTime? @db.Timestamptz(6)
  is_online             Boolean   @default(false)
  notifications_enabled Boolean   @default(true)
  
  // Member metadata for tracking how they were added
  added_by              String?   // mongo_user_id who added this member
  added_via             String?   // 'creation' | 'auto_sync' | 'manual_add' | 'invitation'
  
  channels              channels  @relation(fields: [channel_id], references: [id], onDelete: Cascade)

  @@unique([channel_id, mongo_member_id])
  @@index([mongo_member_id])
  @@index([channel_id, role])
}

model channels {
  id                     String            @id @default(uuid()) @db.Uuid
  type                   String
  name                   String?
  avatar_url             String?
  mongo_department_id    String?
  mongo_project_id       String?
  mongo_creator_id       String
  is_private             Boolean           @default(false)
  member_count           Int               @default(0)
  last_message_at        DateTime?         @db.Timestamptz(6)
  created_at             DateTime          @default(now()) @db.Timestamptz(6)
  updated_at             DateTime          @default(now()) @db.Timestamptz(6)
  categories             String[]          @default([])
  
  // Archive fields
  is_archived            Boolean           @default(false)
  archived_at            DateTime?         @db.Timestamptz(6)
  archived_by            String?           // mongo_user_id who archived
  
  // Advanced Channel Settings
  auto_sync_enabled      Boolean           @default(true)   // Auto-add new dept members/assignees
  allow_external_members Boolean           @default(false)  // Allow members outside dept/project
  admin_only_post        Boolean           @default(false)  // Only admins can send messages
  admin_only_add         Boolean           @default(false)  // Only admins can add new members
  
  attachments            attachments[]
  channel_members        channel_members[]
  messages               messages[]
  reactions              reactions[]

  @@index([categories], type: Gin)
  @@index([is_archived])
  @@index([mongo_department_id])
  @@index([mongo_project_id])
  @@index([auto_sync_enabled, is_archived])
}

model messages {
  id                       String          @id @default(uuid()) @db.Uuid
  channel_id               String          @db.Uuid
  mongo_sender_id          String
  content                  String
  content_type             String          @default("text")
  thread_id                String?         @db.Uuid
  reply_count              Int             @default(0)
  mongo_mentioned_user_ids String[]
  is_edited                Boolean         @default(false)
  edited_at                DateTime?       @db.Timestamptz(6)
  created_at               DateTime        @default(now()) @db.Timestamptz(6)
  parent_message_id        String?         @db.Uuid
  
  // Denormalized sender fields for real-time performance (no MongoDB lookups needed)
  sender_name              String          @default("Unknown User")
  sender_email             String          @default("")
  sender_avatar            String?
  sender_role              String          @default("User")
  
  // Trash/Delete fields for soft delete with 30-day restore
  is_trashed               Boolean         @default(false)
  trashed_at               DateTime?       @db.Timestamptz(6)
  trashed_by               String?         // mongo_user_id who trashed
  trash_reason             String?
  hidden_by_users          String[]        @default([]) // For "Hide for Me" feature
  original_content         String?         // Preserved for restoration
  
  attachments              attachments[]
  channels                 channels        @relation(fields: [channel_id], references: [id], onDelete: Cascade)
  messages                 messages?       @relation("messagesTomessages", fields: [parent_message_id], references: [id])
  other_messages           messages[]      @relation("messagesTomessages")
  reactions                reactions[]
  read_receipts            read_receipts[]

  @@index([parent_message_id])
  @@index([channel_id, is_trashed, created_at(sort: Desc)])
  @@index([mongo_sender_id, is_trashed])
  @@index([is_trashed, trashed_at])
}

model reactions {
  id            String   @id @default(uuid()) @db.Uuid
  message_id    String   @db.Uuid
  channel_id    String   @db.Uuid
  mongo_user_id String
  user_name     String   @default("Unknown")  // Denormalized for fast display
  emoji         String
  created_at    DateTime @default(now()) @db.Timestamptz(6)
  channels      channels @relation(fields: [channel_id], references: [id], onDelete: Cascade)
  messages      messages @relation(fields: [message_id], references: [id], onDelete: Cascade)

  @@unique([message_id, mongo_user_id, emoji])
}

model read_receipts {
  id            String   @id @default(uuid()) @db.Uuid
  message_id    String   @db.Uuid
  mongo_user_id String
  read_at       DateTime @default(now()) @db.Timestamptz(6)
  messages      messages @relation(fields: [message_id], references: [id], onDelete: Cascade)

  @@unique([message_id, mongo_user_id])
}
